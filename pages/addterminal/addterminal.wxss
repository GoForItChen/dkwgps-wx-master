.container {
  background: #fff;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  flex-direction: row;
  height: 128rpx;
  background: #48a6fe;
  align-items: flex-end;
  padding-left: 30rpx;
}

.header image {
  display: flex;
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 29rpx;
}

.header text {
  color: #fff;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}

.view-yzm {
  display: flex;
  flex-direction: row;
  height: 70rpx;
  justify-content: space-between;
  border-radius: 10rpx;
  align-items: center;
  margin: 20rpx 65rpx;
}

.view-yzm .yzm-item {
  display: flex;
  width: 50%;
  flex: 2;
  height: 100%;
  background: #efeff4;
  flex-direction: row;
  border-radius: 10rpx;
  margin-right: 20rpx;
  align-items: center;
}

.yzm-item image {
  height: 45rpx;
  width: 45rpx;
  align-self: center;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.yzm-item input {
  font-size: 25rpx;
  width: 100%;
}

.yam-btn image {
  width: 70rpx;
  height: 70rpx;
}

.btn-login {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: #48a6fe;
  
}
.btn-text{
  color: #ffffff;
}