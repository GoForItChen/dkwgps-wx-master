.container {
  /* display: flex;
  flex-direction: column; */
  background: #efeff4;
  width: 100%;
  height: 100%;
}

.header {
  display: flex;
  flex-direction: row;
  height: 128rpx;
  background: #48a6fe;
  align-items: flex-end;
  padding-left: 30rpx;
}

.header image {
  display: flex;
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 29rpx;
}

.header text {
  color: #fff;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
.map_address{
  background: #666666;
  opacity: 0.5;
  height: 50rpx;
  width: 100%;
  
}
.address_detail{
  color: #fff;
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.marquee_text {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
  position: absolute;
  top: 0;

}