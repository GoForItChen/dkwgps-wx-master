<view class="container">
<view class='header'>
    <image src='/static/images/left_30px.png' bindtap="back"></image>
    <text class='nav'>修改密码</text>
</view>
  <view class="form-box">
 <view class="form-item">
       <image class="midlogo" id="logo" src="/static/images/app_blue_48px@3x.png" catchtap="clearInput"></image>
</view>

    <view class="form-item">
     <input class="password" value="{{Password}}" password bindinput="bindPasswordInput" placeholder="请输入密码" />
      <image class="inputBac" id="clear-password"  src="/static/images/Inputbox_510px@3x.png" catchtap="clearInput">
      </image>
      <image class="inputBacthree" id="pwdImg" src="/static/images/lock_new_30px@3x.png" catchtap="clearInput">
     </image> 
    </view>

    <view class="form-item">
      <input class="repassword" value="{{confirmPassword}}" password bindinput="bindConfirmPasswordInput" placeholder="请确认密码" />
      <image class="inputBactwo" id="clear-confirm-password" src="/static/images/Inputbox_510px@3x.png" catchtap="clearInput"></image>
            <image class="inputBacfour" id="pwdImgtwo" src="/static/images/lock_check_30px@3x.png" catchtap="clearInput"></image>
    </view>

<view class="form-item"> 
   <image class="buttonImg" id="confirmButton"  bindtap="startReset" src="/static/images/btn_332px_normal@3x.png" >
   </image>
<text class='reset-btn' bindtap="startReset">确\t认</text>
</view>
  </view>
</view>