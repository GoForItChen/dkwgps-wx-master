page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.header{
  display: flex;
  flex-direction: row;
  height: 128rpx;
  background:#48A6FE; 
  align-items: flex-end;
  padding-left: 30rpx;
 
}
.header image{
  display: flex;
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 29rpx;
}
.header text{
  color: #ffffff;
  font-size: 34rpx;
   margin-bottom: 20rpx;
}
.search{
  display: flex;
  flex-direction: row;
  height: 70rpx;
  width: 60%;
  background: #efeff4;
  border-radius: 10rpx;
  /* justify-content: center; */
  align-items: center;

  margin: 20rpx 65rpx;
}
search-all{
 display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  /* padding: 26rpx 30rpx; */
}
.search image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  margin-left: 17rpx;
}
.search input{
  color: #666666;
  font-size: 26rpx;
}
.search_btn{
  width: 40%;
  height: 70rpx;
}
.view-yzm{
  display: flex;
  flex-direction: row;
   height: 80rpx;
  justify-content: space-between;
  border-radius: 10rpx;
  align-items: center;
  margin: 20rpx 65rpx;
}
.view-yzm .yzm-item{
  display: flex;
  width: 50%;
  flex: 2;
  height: 100%;
  justify-content: space-between;
   background: #efeff4;
  flex-direction: row;
  border-radius: 10rpx;
  margin-right: 20rpx;
  align-items: center;
}

.yzm-item image {
height: 50rpx;
  width: 50rpx;
  align-self: center;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.yzm-item input{
  font-size: 30rpx;
}
.yam-btn button{
   background:#48A6FE; 
   flex: 1;
   height: 75rpx;
   display: flex;
   align-items: center;
   color: #ffffff;
}

.btn_view{
  width: 40%;
  height: 70rpx;
}
.swiper-tab{  
    width: 100%;  
    /* border-bottom: 2rpx solid #777777;   */
    text-align: center;  
    line-height: 80rpx;
    }  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #666666;  
}  
.on{ color: #48A6FE;  
    /* border-bottom: 5rpx solid #da7c0c; */
    }  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
} 
